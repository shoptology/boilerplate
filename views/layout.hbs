<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width" />
  <title>{{title}}</title>
  <link rel="stylesheet" href="/css/styles.css" />
  <script src="/js/lib/jquery-2.1.1.min.js"></script>
  {{#livereload}}
    <script src="http://localhost:35729/livereload.js"></script>
  {{/livereload}}
</head>
<body>

    <div class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" data-toggle="collapse" data-target=".navbar-collapse" class="navbar-toggle"><span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></button><a href="/" class="navbar-brand">Project name</a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><a href="/">Home</a></li>
            <li><a href="/api">API Examples</a></li>
            <li><a href="/contact">Contact</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li><a href="/login">Login</a></li>
            <li><a href="/signup">Create Account</a></li>
          </ul>
        </div>
      </div>
    </div>

    {{#if messages.errors}}
        <div class="alert alert-danger fade in">
            <button type="button" data-dismiss="alert" class="close">×</button>
            {{#each messages.errors}}
                <div>{{error.msg}}</div>
            {{/each}}
        </div>
    {{/if}}

    {{#if messages.info}}
        <div class="alert alert-danger fade in">
            <button type="button" data-dismiss="alert" class="close">×</button>
            {{#each messages.info}}
                <div>{{info.msg}}</div>
            {{/each}}
        </div>
    {{/if}}

    {{#if messages.success}}
        <div class="alert alert-danger fade in">
            <button type="button" data-dismiss="alert" class="close">×</button>
            {{#each messages.success}}
                <div>{{success.msg}}</div>
            {{/each}}
        </div>
    {{/if}}

    {{{body}}}

