<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width" />
  <title>{{title}}</title>
  <link rel="stylesheet" href="/css/styles.css" />
  <script src="/js/lib/jquery-2.1.1.min.js"></script>
  {{#if dev.livereload}}
    <script src="http://localhost:35729/livereload.js"></script>
  {{/if}}
</head>
<body>

    <div class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" data-toggle="collapse" data-target=".navbar-collapse" class="navbar-toggle"><span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></button><a href="/" class="navbar-brand">Project name</a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><a href="/">Home</a></li>
            <li><a href="/contact">Contact</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            {{#if user._id}}
              <li><a href="/account" title="My Account"><img src="{{gravatar user.email}}" /></a></li>
              <li><a href="/logout">Logout</a></li>
            {{else}}
              <li><a href="/login">Login</a></li>
              <li><a href="/signup">Create Account</a></li>
            {{/if}}

          </ul>
        </div>
      </div>
    </div>

    <div class="container">
        {{#if messages.errors}}
            <div class="alert alert-danger fade in">
                <button type="button" data-dismiss="alert" class="close">×</button>
                {{#each messages.errors}}
                    <div>{{msg}}</div>
                {{/each}}
            </div>
        {{/if}}

        {{#if messages.info}}
            <div class="alert alert-danger fade in">
                <button type="button" data-dismiss="alert" class="close">×</button>
                {{#each messages.info}}
                    <div>{{msg}}</div>
                {{/each}}
            </div>
        {{/if}}

        {{#if messages.success}}
            <div class="alert alert-danger fade in">
                <button type="button" data-dismiss="alert" class="close">×</button>
                {{#each messages.success}}
                    <div>{{msg}}</div>
                {{/each}}
            </div>
        {{/if}}

        {{{body}}}

    </div>

    <footer>
      <div class="container text-center">
        <div>© 2014 Company, Inc.</div>
        <div><strong>Hackathon Starter</strong> Project ·
           Created by<a href="http://sahatyalkabov.com"> Sahat Yalkabov</a>
        </div>
        <div>Code licensed under&nbsp;<a href="http://opensource.org/licenses/mit-license.html">MIT License</a></div>
        <div><a href="https://github.com/sahat/hackathon-starter">GitHub Project</a> ·&nbsp;<a href="https://github.com/sahat/hackathon-starter/issues">Issues</a></div>
      </div>
    </footer>

    <script src="/js/main.js"></script>
    {{#if dev.browsersync}}
        <script src='//{{dev.localIpAddress}}:3000/socket.io/socket.io.js'></script>
        <script>var ___socket___ = io.connect('http://{{dev.localIpAddress}}:3000');</script>
        <script src='//{{dev.localIpAddress}}:3001/client/browser-sync-client.0.8.2.js'></script>
    {{/if}}
</body>
